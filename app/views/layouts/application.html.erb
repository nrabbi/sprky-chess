<!DOCTYPE html>
<html>
  <head>
    <title>Sprky Chess</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Exo" rel="stylesheet">
  </head>

  <body>
    <div class="wrap">
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <%= link_to 'Sprky Chess', root_path, class: 'navbar-brand' %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <% if player_signed_in? %>
              <li style="color: white; margin-top: 15px; margin-left: 1em; ">Welcome <%= current_player.email %></li>
              <li><%= link_to 'Sign out', destroy_player_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to 'Sign in', new_player_session_path %></li>
              <li><%= link_to 'Sign up', new_player_registration_path %></li>
            <% end %>
          </ul>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <% if notice.present? %>
      <p class="alert alert-warning alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </p>
    <% end %>

    <%= yield %>

    <br style="clear: both;"></br>
  
    <div id="footer">
      <div class="container">

        <div class="col-xs-12 col-sm-3 text-center">
          <u><b>Players</b></u>
          <br/>
          <%= link_to 'Home', root_path %>
          <% if player_signed_in? %>        
            <br />
            <%= link_to 'New Game', new_game_path %>
            <br/>
            <%= link_to 'Available Games', games_path %>
          <% end %>
        </div>

        <div class="col-xs-12 col-sm-3 text-center">
          <u><b>About</b></u>
          <br />
          <%= link_to 'Team', '#' %>
          <br />
          <%= link_to 'Privacy Policy', '#' %>
        </div>

        <div class="col-xs-12 col-sm-3 text-center">
          <u><b>Contact</b></u>
          <br />
          support@snowcoders.com
          <br />
          World Wide Web
        </div>

        <div class="col-xs-12 col-sm-3 text-center">
          <b class="">Social</b>
          <br />
          
          <%= link_to 'http://github.com/thesnowcoders-fh' do %>
            <%= image_tag 'github.png', class: 'social-button' %>
          <% end %>

          <%= link_to '#' do %>
            <%= image_tag 'linkedin.png', class: 'social-button' %>
          <% end %>

          <%= link_to '#' do %>
            <%= image_tag 'twitter.png', class: 'social-button' %>
          <% end %>

        </div>

    </div>


  </body>
</html>
