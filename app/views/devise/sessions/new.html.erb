<br/><br/>

<div class="card col-xs-10 col-xs-offset-1">
  <h2 class="text-center">Log in</h2>
  <br/>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %><br/>
      <%= f.input :password, required: false %><br/>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary center-block" %>
    </div>
  <% end %>

  <br/>

  <div class="text-center">
    <%= render "devise/shared/links" %><br/>
  </div>
</div>
